<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClick">

    <TextView
        android:id="@+id/textViewMainStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/readex_pro_bold"
        android:text="station"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor1"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"

        android:id="@+id/textViewLineColor2"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor1"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"

        android:id="@+id/textViewLineColor3"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor2"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"

        android:id="@+id/textViewLineColor4"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor3"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"

        android:id="@+id/textViewLineColor5"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor4"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"

        android:id="@+id/textViewLineColor6"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/readex_pro_bold"
        android:scaleType="fitXY"
        android:text="color"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor5"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <ImageView
        android:id="@+id/imageViewEntrySeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLineColor1"
        app:srcCompat="@drawable/separator" />
</androidx.constraintlayout.widget.ConstraintLayout>