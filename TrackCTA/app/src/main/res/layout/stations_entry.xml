<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:onClick="onClick">

    <TextView
        android:id="@+id/textViewMainStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:fontFamily="@font/readex_pro_bold"
        android:text="station"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor1"

        android:layout_marginStart="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#000000"


        android:fontFamily="@font/readex_pro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor2"
        android:textColor="#000000"

        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"

        android:fontFamily="@font/readex_pro_bold"
        app:layout_constraintStart_toEndOf="@+id/textViewLineColor1"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor3"
        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/readex_pro_bold"
        android:textColor="#000000"

        app:layout_constraintStart_toEndOf="@+id/textViewLineColor2"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor4"
        android:textColor="#000000"

        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/readex_pro_bold"

        app:layout_constraintStart_toEndOf="@+id/textViewLineColor3"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor5"
        android:textColor="#000000"

        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/readex_pro_bold"

        app:layout_constraintStart_toEndOf="@+id/textViewLineColor4"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewLineColor6"
        android:textColor="#000000"

        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/readex_pro_bold"

        app:layout_constraintStart_toEndOf="@+id/textViewLineColor5"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainStationName"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/arrow"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewEntrySeparator"
        android:layout_marginEnd="10dp"
        />

    <ImageView
        android:id="@+id/imageViewEntrySeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLineColor1"
        app:srcCompat="@drawable/separator" />
</androidx.constraintlayout.widget.ConstraintLayout>