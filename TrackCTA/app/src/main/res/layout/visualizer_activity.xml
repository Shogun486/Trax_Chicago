<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black">

    <ImageView
        android:id="@+id/imageViewS4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS3"
        app:srcCompat="@android:drawable/ic_delete"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imageViewS5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS4"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS5"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS6"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS7"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS1"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewS1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewS1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS2"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewS1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTrain"
        app:layout_constraintStart_toStartOf="@+id/imageViewTrain"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTrain"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewTrain"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/train" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:fontFamily="@font/readex_pro_bold"
        android:textSize="25dp"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS6" />
</androidx.constraintlayout.widget.ConstraintLayout>